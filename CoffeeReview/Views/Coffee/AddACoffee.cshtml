@model CoffeeReview.Models.Coffee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddACoffee</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
    <link href="~/css/CRUDStyle.css" rel="stylesheet" />
</head>
<body>

    <nav>
        <a href="/Home/Index">Home</a>
        <a href="/Coffee/Index">Coffees</a>
        <a href="/Coffee/AddACoffee">Add a Coffee</a>
        <a href="/Coffee/Delete">Delete a Coffee</a>
    </nav>

    <div class="box">
        <h4>Coffee</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Brand" class="control-label">What Brand of Coffee?</label>
                        <input asp-for="Brand" class="form-control" />
                        <span asp-validation-for="Brand" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Kind" class="control-label">What Kind of Coffee?</label>
                        <input asp-for="Kind" class="form-control" />
                        <span asp-validation-for="Kind" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description" class="control-label">Description:</label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="hidden" name="ImageUrl" value="/images/Cupofcoffee.jpg" />
                        @*<label asp-for="ImageUrl" class="control-label">Enter a Image Url</label>*@
                        @*<input asp-for="ImageUrl" class="form-control" />*@
                        @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
                        @*<input type="hidden" name="Id" value="@ViewBag.Id" />*@
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-default" />
                    </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Coffee/Index/">Back to Coffees</a>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
