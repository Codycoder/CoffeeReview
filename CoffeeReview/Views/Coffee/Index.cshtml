@model IEnumerable<CoffeeReview.Models.Coffee>
@{
    ViewData["Title"] = "Products";
}

<!DOCTYPE html>
<h2>Products</h2>
<html>
<head>
    <meta charset="utf-8" />
    <title>Products</title>
    <link rel="stylesheet" type="text/css" href="~/css/style.css" />
</head>
<body>
        <h2>Coffees</h2>
        <div id="coffees">
            @foreach (var coffee in Model)
            {
            <article>

                <p><a href="/Coffee/Details/@coffee.Id"><span><img src="@coffee.ImageUrl" /></span></a></p>

            
                



            </article>
            }
        </div>

<nav>
    <a href="#coffees">Coffees</a>
</nav>


