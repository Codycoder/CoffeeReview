@model CoffeeReview.Models.Coffee
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>AddACoffee</title>
</head>
<body>

    <h4>Coffee</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Brand" class="control-label">What Brand of Coffee?</label>
                    <input asp-for="Brand" class="form-control" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Kind" class="control-label">What Kind of Coffee?</label>
                    <input asp-for="Kind" class="form-control" />
                    <span asp-validation-for="Kind" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label">Description:</label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type ="hidden" name="ImageUrl" value="/images/Cupofcoffee.jpg" />
                    @*<label asp-for="ImageUrl" class="control-label">Enter a Image Url</label>*@
                    @*<input asp-for="ImageUrl" class="form-control" />*@
                    @*<span asp-validation-for="ImageUrl" class="text-danger"></span>*@
                    @*<input type="hidden" name="Id" value="@ViewBag.Id" />*@
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Coffee/Index/">Back to Coffees</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
